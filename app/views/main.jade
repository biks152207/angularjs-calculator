div.header
  h3.text-muted Cloud Calculator


div.row
  div.col-md-8
    form.horizontal-form(novalidate name="mainForm")
      div(ng-form name="calculatorForm")
        div.row
          div.col-md-3
            label Select Currency
            select.form-control(ng-options="currency for currency in main.currencyList" ng-model="main.defaultCurrency" style="background:#aeaeae" ng-change="main.updatePriceAndHour()")
        br
        div.row
          div.col-md-3
            div.form-group
              label
                | VM
              select.form-control(ng-model="main.resourceData.vm.type" ng-change="main.updatePriceAndHour()" ng-options="item.type as item.type for item in main.resourceList['vm']")
                option(value="") Select Option
          div.col-md-3
            div.form-group
              label
                | Quantity
              input.form-control(type="text" name="quantity1" ng-change="main.changePriceAndHour('vm', calculatorForm.quantity1.$invalid)" ng-pattern="/^[0-9]+$/" required min="1"  ng-model="main.resourceData.vm.quantity")
              span.text-danger(ng-if="calculatorForm.quantity1.$invalid && calculatorForm.quantity1.$dirty")
                | Invalid
          div.col-md-3
            div.form-group
              label
                | Period
              input.form-control(type="text" name="period1" ng-change="main.changePriceAndHour('vm', calculatorForm.period1.$invalid)" ng-pattern="/^[0-9]+$/" required min="1" hour-filter ng-model="main.resourceData.vm.period")
              span.text-danger(ng-if="calculatorForm.period1.$invalid && calculatorForm.period1.$dirty")
                | Invalid
          div.col-md-3
            div.form-group
              label
                | Price
              input.form-control(type="text" ng-model="main.resourceData.vm.price")
        div.row
          div.col-md-3
            div.form-group
              label
                | DISK
              select.form-control(ng-model="main.resourceData.disk.type" ng-change="main.updatePriceAndHour()" ng-options="type.type as type.type for type in main.resourceList['disk']")
