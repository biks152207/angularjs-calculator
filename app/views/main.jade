  div.col-md-4.well
    h4.text-center Calculation
    table.table
      thead
        tr
          th Resource
          th Period
          th Quantity
          th Cost
      tbody
        tr(ng-repeat="list in main.priceDescription")
          td {{list.resource}}
          td {{list.period}}
          td {{list.quantity}}
          td {{list.price}}
        tr(ng-if="main.total")
          td
          td
          td Total:
          td {{main.total | number: 2}} {{main.defaultCurrency}}
    
